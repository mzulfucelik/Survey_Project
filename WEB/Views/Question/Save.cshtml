@{
    ViewData["Title"] = "Save";
}
@model QuestionDto




<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <form asp-action="Save" method="post" asp-controller="Question" class="needs-validation" novalidate>
                <h4 class="card-title">Sorular</h4>



                <div class="mb-3 row">
                    <div class="col-md-6">
                        <label asp-for="Content" class="col-md-2 col-form-label" >Soru 1</label>
                        <label class="col"> Uzman CRM hakkındaki düşücncenleriniz neler?</label>
                        <input asp-for="Content" type="text" class="form-control"  required>
                        <div class="invalid-feedback"> Cevap Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-md-6">
                        <label asp-for="Content" class="col-md-2 col-form-label" >Soru 2 </label>
                        <label class="col" > Uzman CRM ürünlerimiz hakkında neler biliyorsunuz?</label>
                        <input asp-for="Content" type="text" class="form-control" required>
                      
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-md-6">
                        <label asp-for="Content" class="col-md-2 col-form-label" >Soru 3 </label>
                        <label class="col">Varsa önerileriniz nelerdir? </label>
                        <input asp-for="Content" type="text" class="form-control" required>
                        <div class="invalid-feedback"> Cevap Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-md-6">
                        <label asp-for="Content" class="col-md-2 col-form-label" >Soru 4 </label>
                        <label class="col" > Bize hangi kanaldan ulaştınız ?</label>
                        <input asp-for="Content" type="text" class="form-control" required>
                        <div class="invalid-feedback"> Cevap Boş olamaz!</div>


                    </div>
                </div>

                <input type="submit" class="btn btn-primary waves-effect waves-light me-1 form-group" />




            </form>


        </div>
    </div>
</div>


